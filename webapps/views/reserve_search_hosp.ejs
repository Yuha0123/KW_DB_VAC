<% include ./common/header %>

<div class="container">
    <div class="py-4 px-3 pb-3 text-start" style="background-color: #00A3FF;">
        <h2 class="px-4 display-8 fw-bold text-white">병원 조회</h2>
    </div>
    <div class="py-4 px-5 pb-3 text-start border-bottom" style="background-color: #0077CD;">
        <h4 class="px-4 display-8 text-white">병원: 연세 나눔 소아과</h4>
        <h4 class="px-4 display-8 text-white">백신: -</h4>
    </div>
    <div class="p-5 mb-4 bg-light">
        <div class="container-fluid py-5">

        <form method="POST" name="form">
            <div class="row">
                <div class="col-3">
                    <h6 class="dislpay-8">시/도 선택</h6>
                    <select class="form-select" name ="city" style="width:auto" aria-label=".form-select-lg example">
                        <option value="0" selected disabled>시/도 선택</option>
                        <option value="1">서울특별시</option>
                        <option value="2">부산광역시</option>
                        <option value="3">대구광역시</option>
                        <option value="4">인천광역시</option>
                        <option value="5">광주광역시</option>
                        <option value="6">대전광역시</option>
                        <option value="7">울산광역시</option>
                        <option value="8">세종특별자치시</option>
                        <option value="9">경기도</option>
                        <option value="10">강원도</option>
                        <option value="11">충청북도</option>
                        <option value="12">충청남도</option>
                        <option value="13">전라북도</option>
                        <option value="14">전라남도</option>
                        <option value="15">경상북도</option>
                        <option value="16">경상남도</option>
                        <option value="17">제주특별자치도</option>
                    </select>
                </div>
                
                <div class="col-3">
                    <h6 class="dislpay-8">구/군/시 선택</h6>
                    <select class="form-select" name="district" style="width:auto" aria-label=".form-select-lg example">
                        <option value = "0" selected disabled>구/군/시 선택</option>
                        <option value="1">구로구</option>
                        <option value="2">노원구</option>
                        <option value="3">성북구</option>
                    </select>
                </div>

                <div class="col-3">
                    <h6 class="dislpay-8">동/면/리 선택</h6>
                    <select class="form-select" name="town" style="width:auto" aria-label=".form-select-lg example">
                        <option  value = "0" selected disabled>동/면/리 선택</option>
                        <option value="1">상계동</option>
                        <option value="2">하계동</option>
                        <option value="3">월계동</option>
                    </select>
                </div>

                <div class="col-3">
                    <h6 class="dislpay-8">병원 선택</h6>
                    <select class="form-select" name="hospital_name" style="width:auto" aria-label=".form-select-lg example">
                        <option  value = "0" selected disabled>병원 선택</option>
                        <option value="1">홍길동 병원</option>
                        <option value="2">연세나눔소아과</option>
                        <option value="3">김씨일해병원</option>
                        <option value="4">이씨놀아병원</option>
                        <option value="5">권씨들일안해병원</option>
                    </select>
                </div>
                
            </div>

            <div class="row-md-3 mt-5 me-3 text-center">
                <input type="submit" class="btn btn-primary me-3" name="reserve_select_date" value="날짜 선택" onclick="submit_action(1)">
                <input type="submit" class="btn btn-warning" name="left_vacc" value="잔여 백신 선택" onclick="submit_action(2)">
            </div>    
        </form>
        </div>
    </div>
</div>

<script>
    function submit_action(index){
        if(index == 1){
            document.form.action="reserve_select_date";
        }
        else if(index ==2){
            document.form.method="GET";
            document.form.action="leftvacc_select";
        }
    }
</script>

<% include ./common/footer %>
